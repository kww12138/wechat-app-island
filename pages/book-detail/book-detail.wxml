<wxs src="../../util/filter.wxs" module="util" />

<view class="container">
  <view class="head">
    <image src="{{book.image}}"></image>
    <text class='title'>{{book.title}}</text>
    <text class='author'>{{book.author}}</text>
  </view>
  <view class="sub-container">
    <text class="headline">短评</text>
    <text class="shadow" wx:if="{{comments==false}}">还没有短评</text>
    <view class="comment-container">
      <block wx:key="content" wx:for="{{util.limit(comments,7)}}">
        <k-tag text="{{item.content}}">
          <text class="num" slot="after">{{'+'+item.nums}}</text>
        </k-tag>
      </block>
    </view>
  </view>
  <view class="sub-container">
    <text class="headline">内容简介</text>
    <text class="content" decode="{{true}}">{{util.format(book.summary)}}</text>
  </view>
  <view class="sub-container">
        <text class="headline">书本信息</text>
        <view class="detail-container">
            <view class="vertical description">
                <text>出版社</text>
                <text>出版年</text>
                <text>页数</text>
                <text>定价</text>
                <text>装帧</text>
            </view>
            <view class="vertical">
                <text>{{book.publisher}}</text>
                <text>{{book.pubdate}}</text>
                <text>{{book.pages}}</text>
                <text>{{book.price}}</text>
                <text>{{book.binding}}</text>
            </view>
        </view>
    </view>
</view>

<view class="post-container" wx:if="{{!posting}}">
  <view bind:tap="onFakePost" class="post-fake">
    <text>输入短评</text>
  </view>
  <view class="like-container">
    <k-like bind:like="onLike" class="like" like="{{likeStatus}}" count="{{likeCount}}"/>
    <k-button class="share-btn" open-type="share">
      <image class="share" slot="img" src="/images/icon/share.png" />
    </k-button>
  </view>
</view>

<view class="posting-container" wx:if="{{posting}}">
  <view class="post-header">
    <text>仅可点击标签+1</text>
    <text bind:tap="onCancel" class="cancel">取消</text>
  </view>
  <view class="comment-container">
    <block wx:key="content" wx:for="{{util.limit(comments,2)}}">
        <k-tag bind:tapping="onPost" text="{{item.content}}">
          <text class="num" slot="after">{{'+'+item.nums}}</text>
        </k-tag>
      </block>
  </view>
  <input bindconfirm="onPost" class="post" placeholder="短评最多12个字"></input>
</view>

<k-mask wx:if="{{posting}}" />